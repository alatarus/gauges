<?xml version="1.0" encoding="utf-8"?>
<s:Skin 
    minHeight="50"
    minWidth="50"
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:mx="library://ns.adobe.com/flex/mx"
    xmlns:components="alatarus.components.*">
    <!-- host component -->
    <fx:Metadata>
		[HostComponent("alatarus.components.CircularGauge")]
	</fx:Metadata>

    <!-- SkinParts
    name=marker, type=spark.components.supportClasses.GroupBase, required=false
    -->
    <s:Ellipse 
        left="0" right="0" top="0" bottom="0">
        <s:fill>
            <s:SolidColor color="0xbcd1da"/>
        </s:fill>
    </s:Ellipse>

    <s:Group id="marker"
        transformX="0"
        transformY="-5">
        <s:Path 
            left="0" right="0" top="0" bottom="0"
            data="M 0 0 L 60 3 L 65 5 L 60 7 L 0 10 Z">
            <s:fill>
                <s:LinearGradient rotation="90">
                    <s:GradientEntry 
                        color="0xFF0131"
                        ratio="0.4"
                        alpha="1"/>
                    <s:GradientEntry 
                        color="0xA00000"
                        ratio="0.5"
                        alpha="1"/>
                </s:LinearGradient>
            </s:fill>
        </s:Path>
    </s:Group>
    <components:GaugeScale id="axis"
        left="0" right="0" top="0" bottom="0"/>
</s:Skin>
